<!-- Styles -->
<style scoped>
  .clickable {
    cursor: pointer;
  }

  .clickable > input {
    cursor: pointer;
    color: white;
  }


  .page-title {
    border-bottom: 3px solid rgba(0, 0, 0, 0.3);
  }

  .page-title h2 {
    font-size: 18px;
    font-weight: 600;
  }

  .form-item {
    width: 100%;
    display: flex;
    justify-content: space-between;
    margin: 15px 0px;
  }

  .form-item.nsfw-item {
    justify-content: center;
  }

  .form-item.nsfw-item span {
    margin-right: 15px;
  }

  .form-item label {
    margin-right: 20px;
  }

  .form-item.submit {
    margin-top: 40px;
  }
</style>

<!-- JavaScripts -->
<script defer>
</script>

<!-- HTML -->
<div>
  <div class='page-title'>
    <h2> New Song </h2>
  </div>
  <div>
    <%= form_with model: @song, url: songs_path, method: :post, local: true do |f| %>
      <div class='input-field form-item'>
        <%= f.text_field :title %>
        <%= f.label :title, 'Song Title:'%>
      </div>
      <div class='input-field form-item'>
        <%= f.text_field :url %>
        <%= f.label :url, 'Song URL:'%>
      </div>
      <div class='input-field form-item'>
        <%= f.text_field :start_time %>
        <%= f.label :start_time, 'Start Time (not required, default 0.00):'%>
      </div>
      <div class='input-field form-item'>
        <%= f.text_field :end_time %>
        <%= f.label :end_time, 'End Time (not required, default end of song):'%>
      </div>
      <div class='input-field form-item'>
        <%= f.number_field :decibles %>
        <%= f.label :decibles, 'Decibles:'%>
      </div>
      <div class='input-field form-item'>
        <%= f.text_field :speed %>
        <%= f.label :speed, 'Speed (default 1):'%>
      </div>
      <div class='form-item nsfw-item'>
        <label>
          <%= f.radio_button :nsfw, true, :checked => true %>
          <span>NSFW</span>
        </label>
        <label>
          <%= f.radio_button :nsfw, false %>
          <span>SFW</span>
        </label>
      </div>
      <div class='form-item submit'>
        <%= f.submit class: 'waves-effect waves-light btn clickable' %>
        <%= link_to "Cancel", root_url, class: 'waves-effect waves-light btn' %>
      </div>
    <% end %>
  </div>
</div>
